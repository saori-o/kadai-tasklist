<%if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 6 %>
        </div>
        <div class="form-group">
          <%= f.text_area :status, class: 'form-control', rows: 1 %>
        </div>
        <%= f.submit '登録', class: 'btn btn-info btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron jumbotron-fluid">
    <div class="text-center container">
      <h1 class="display-4">Welcome to Tasklist</h1>
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
