<%if logged_in? %>
  <div class="row">
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron jumbotron-fluid">
    <div class="text-center container">
      <h1 class="display-4">Welcome to Tasklist</h1>
      <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
    <% if @taskall.any? %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>タスク名</th>
                <th>進捗状況</th>
            </tr>
        </thead>
        <tbody>
           <% @taskall.each do |task| %>
           <tr>
               <td><%= link_to task.id, task %></td>
               <td><%= task.content %></td>
               <td><%= task.status %></td>
           </tr>
        <% end %>
        </tbody>
    </table>
    <div>
    <%= paginate @taskall %>
    </div>
<% end %>

